<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.quizapp.MainActivity">




    <Button
        android:text="Submit "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/answer_box"
        android:hint="Enter Answer"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:text="What the programming language that userd for android studio?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/answer_box"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <TextView
        android:text="is this right declaration of a boolean'boolean a=1;'? "
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp">

    <RadioButton
        android:text="True"
        android:layout_marginLeft="29dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/true_box"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/java_box"
        android:layout_alignEnd="@+id/java_box" />
    <RadioButton
        android:text="False"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/false_box"
        android:layout_alignBaseline="@+id/true_box"
        android:layout_alignBottom="@+id/true_box"
        android:layout_toRightOf="@+id/c_box"
        android:layout_toEndOf="@+id/c_box" />
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:hint="Enter Your name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Which of below answer is type of Data Storge in Java?"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup2"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Objects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/object1"
            android:layout_weight="1" />

        <RadioButton

            android:text="Packages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/package1"
            android:layout_weight="1" />

        <RadioButton
            android:text="Interfaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interface1"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Which of these can be used to fully abstract a class from its implementation?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/textView2"
        android:layout_above="@+id/radioGroup2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstQ"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <CheckBox
        android:text="Stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trueanswer"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/true_box"
        android:layout_alignStart="@+id/true_box" />

    <CheckBox
    android:text="Queue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/extent"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/false_box"
        android:layout_toStartOf="@+id/false_box"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <CheckBox
     android:text="int"
     android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:id="@+id/supper"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />
    </RadioGroup>

</RelativeLayout>
